    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "google-auth-library": "^9.15.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.3",
    "reflect-metadata": "^0.2.2",
    "sequelize": "^6.37.3",
    "swagger-ui-express": "^5.0.1",
